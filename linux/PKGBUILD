pkgbase=linux-chimeraos
pkgver=6.11.4.sk2
pkgrel=1
pkgdesc='Linux ChimeraOS'
# _srctag=v$(echo $pkgver | sed -E 's#.sk.#-sk-#')
_srctag=v${pkgver%.*}-${pkgver##*.}
url="https://github.com/ChimeraOS/linux/commits/$_srctag"
arch=(x86_64)
license=(GPL2)
makedepends=(
  bc
  cpio
  gettext
  libelf
  pahole
  perl
  python
  tar
  xz

  # htmldocs
  #graphviz
  #imagemagick
  #python-sphinx
  #texlive-latexextra
)
options=('!strip')
_srcname=linux-chimeraos
source=(
  "linux-chimeraos.tar.gz::https://github.com/3003n/linux/archive/refs/tags/$_srctag.tar.gz"
  # https://github.com/zen-kernel/zen-kernel/releases/download/v6.11.3-zen1/linux-v6.11.3-zen1.patch.zst
  config  # the main kernel config file
  config-chimera # our config that will be merged
  config-sk
  experiments.patch # experimental kernel patches

  # "0001-cjktty.patch::https://github.com/zhmars/cjktty-patches/raw/master/v6.x/cjktty-6.7.patch"
  "0001-cjktty-6.9.patch"
  "0002-cjktty-32.patch::https://github.com/zhmars/cjktty-patches/raw/master/cjktty-add-cjk32x32-font-data.patch"

  # 0003-sk-chos-rogally.patch

  # "0001-patch_realtek-Fix-ROG-ALLY-X-audio.patch"

  "0003-iio-imu_Add_ROG_ALLY_bmi323-support.patch"

  "0003-uinput.patch"

  "ROG-ALLY-NCT6775-PLATFORM.patch"

  # "https://github.com/jlobue10/ALLY_Nobara_stuff/raw/main/0001-sound-pci-hda-patch_realtek-fix-ALLY-X.patch"

  "0004-vrr-1.patch::https://gitlab.com/evlaV/linux-integration/-/commit/7fbd09a1b740ed016359919003947d05f054ad6b.patch"
  "0005-vrr-2.patch::https://gitlab.com/evlaV/linux-integration/-/commit/5f96bbb94f4dc884007a22ca3e289215064d2065.patch"

)

validpgpkeys=(
